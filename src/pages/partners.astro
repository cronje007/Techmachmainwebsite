---
import MainLayout from '../layouts/MainLayout.astro';

const logos = [
  '/images/partners/logo-1.svg',
  '/images/partners/logo-2.svg',
  '/images/partners/logo-3.svg',
  '/images/partners/logo-4.svg',
  '/images/partners/logo-5.svg',
  '/images/partners/logo-6.svg'
];
---

<MainLayout title="Partners | Techmach">
  <section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-black">Partners</h1>
    <p class="mt-3 text-gray-600">A selection of global and regional partners we work with.</p>
    <div class="mt-10 grid grid-cols-2 gap-6 md:grid-cols-3 lg:grid-cols-6">
      {logos.map((logo, index) => (
        <div class="flex h-28 items-center justify-center rounded-lg border border-gray-200 bg-white p-4">
          <img src={logo} alt={`Partner logo ${index + 1}`} class="max-h-16 w-auto" loading="lazy" />
        </div>
      ))}
    </div>
  </section>
</MainLayout>

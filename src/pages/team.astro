---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const team = await getEntry('pages', 'team.md');
---

<BaseLayout title="Techmach | Team" description={team?.data.intro}>
  <section class="mx-auto grid max-w-7xl gap-10 px-6 py-16 md:grid-cols-2 md:items-center">
    <div>
      <h1 class="mb-4 text-4xl font-bold">Team</h1>
      <p class="text-slate-700">{team?.data.intro}</p>
    </div>
    {team?.data.droneImage && <img src={team.data.droneImage} alt="Techmach team operations" class="h-80 w-full rounded object-cover" loading="lazy" />}
  </section>
</BaseLayout>

---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';

const divisions = [
  {
    title: 'Grain Handling & Storage',
    summary: 'Intake, conveying, storage, spouting, and dust control for grain and raw materials.',
    image: '/images/divisions/grain-handling/hero.svg',
    href: '/grain-handling'
  },
  {
    title: 'Cereal Milling',
    summary: 'Process design, equipment, upgrades, and turnkey milling plants for maize and flour milling.',
    image: '/images/divisions/cereal-milling/hero.svg',
    href: '/cereal-milling'
  },
  {
    title: 'Seed Processing',
    summary: 'Cleaning, grading, treatment systems, and complete plant layouts for seed processing operations.',
    image: '/images/divisions/seed-processing/hero.svg',
    href: '/seed-processing'
  },
  {
    title: 'Feed Milling',
    summary: 'Batching, mixing, pelleting, conveying, and automation for ruminant and poultry feeds.',
    image: '/images/divisions/feed-milling/hero.svg',
    href: '/feed-milling'
  }
];

const featuredProjects = [
  { title: 'Regional Maize Upgrade', summary: 'End-to-end upgrade of intake and conveying lines.', image: '/images/projects/project-1.svg' },
  { title: 'Seed Cleaning Plant', summary: 'Integrated treatment and bagging systems.', image: '/images/projects/project-2.svg' },
  { title: 'Feed Line Automation', summary: 'Pellet plant controls and batching optimization.', image: '/images/projects/project-3.svg' }
];
---

<MainLayout title="Techmach | Home">
  <Hero
    full={true}
    title="Engineering for Africaâ€™s Grain, Milling & Feed Industries"
    subtitle="Techmach delivers design, manufacturing, and field execution that keeps food and feed production moving reliably."
    image="/images/home/hero.svg"
    ctaHref="/contact"
    ctaLabel="Contact"
  />

  <section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-end justify-between">
      <h2 class="text-3xl font-extrabold">Our Divisions</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-4">
      {divisions.map((division) => <Card {...division} />)}
    </div>
  </section>

  <section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold">Featured Projects</h2>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {featuredProjects.map((project) => <Card {...project} badge="Featured" />)}
      </div>
    </div>
  </section>

  <section class="bg-charcoal py-14 text-center text-white">
    <h2 class="text-3xl font-black">Ready to discuss your next plant or upgrade?</h2>
    <a href="/contact" class="mt-6 inline-block rounded-md bg-accent px-6 py-3 font-semibold">Contact Techmach</a>
  </section>
</MainLayout>

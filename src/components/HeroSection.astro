---
interface Props {
  image: string;
  title: string;
  text?: string;
  ctaHref?: string;
  ctaText?: string;
}

const { image, title, text, ctaHref, ctaText } = Astro.props;
---

<section class="relative min-h-[70vh] overflow-hidden">
  <img src={image} alt={title} class="absolute inset-0 h-full w-full object-cover" loading="eager" />
  <div class="absolute inset-0 bg-gradient-to-r from-charcoal/90 via-charcoal/60 to-charcoal/20"></div>
  <div class="relative mx-auto flex min-h-[70vh] max-w-7xl items-center px-6 py-20">
    <div class="max-w-2xl space-y-6 text-white">
      <h1 class="text-4xl font-bold leading-tight md:text-6xl">{title}</h1>
      {text && <p class="text-base text-white/85 md:text-lg">{text}</p>}
      {ctaHref && ctaText && <a href={ctaHref} class="inline-block rounded bg-accent px-6 py-3 text-sm font-semibold uppercase tracking-wide text-white">{ctaText}</a>}
    </div>
  </div>
</section>

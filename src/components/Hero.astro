---
interface Props {
  title: string;
  subtitle?: string;
  image: string;
  ctaHref?: string;
  ctaLabel?: string;
  full?: boolean;
}

const { title, subtitle, image, ctaHref, ctaLabel, full = false } = Astro.props;
---

<section class={`relative flex items-center justify-center ${full ? 'min-h-screen' : 'min-h-[60vh]'}`}>
  <img src={image} alt="" class="absolute inset-0 h-full w-full object-cover" />
  <div class="absolute inset-0 bg-black/55"></div>
  <div class="relative z-10 mx-auto max-w-3xl px-4 text-center text-white">
    <h1 class="text-4xl font-black leading-tight sm:text-5xl">{title}</h1>
    {subtitle && <p class="mt-5 text-lg text-gray-200">{subtitle}</p>}
    {ctaHref && ctaLabel && (
      <a href={ctaHref} class="mt-8 inline-flex rounded-md bg-accent px-6 py-3 font-semibold text-white transition hover:bg-white hover:text-charcoal">
        {ctaLabel}
      </a>
    )}
  </div>
</section>

---
const links = [
  { href: '/about', label: 'About' },
  { href: '/partners', label: 'Partners' },
  { href: '/team', label: 'Team' }
];
---

<header class="sticky top-0 z-50 border-b border-gray-200 bg-white/95 backdrop-blur">
  <nav class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
    <a href="/" class="text-xl font-extrabold uppercase tracking-wide text-charcoal">Techmach</a>
    <div class="flex items-center gap-6">
      {links.map((link) => (
        <a href={link.href} class="text-sm font-semibold text-charcoal transition hover:text-accent">{link.label}</a>
      ))}
      <a href="/contact" class="rounded-md bg-accent px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-charcoal">Contact</a>
    </div>
  </nav>
</header>

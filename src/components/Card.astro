---
interface Props {
  title: string;
  summary: string;
  image: string;
  href?: string;
  badge?: string;
}

const { title, summary, image, href, badge } = Astro.props;
const Wrapper = href ? 'a' : 'article';
---

<Wrapper href={href} class="group overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-md">
  <img src={image} alt={title} class="h-48 w-full object-cover" loading="lazy" />
  <div class="p-5">
    {badge && <span class="mb-2 inline-flex rounded-full bg-accent/10 px-3 py-1 text-xs font-semibold text-accent">{badge}</span>}
    <h3 class="text-xl font-bold text-charcoal group-hover:text-accent">{title}</h3>
    <p class="mt-3 text-sm text-gray-600">{summary}</p>
  </div>
</Wrapper>
